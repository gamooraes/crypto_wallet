<p style="color: green"><%= notice %></p>

<% content_for :title, "Mining types" %>

<h1>Mining types</h1>

<div id="mining_types">
  <table>
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Sigla</th>        
        <th colspan="3"></th>
      </tr>    
    </thead>
    <tbody>
      <% @mining_types.each do |mining_type| %>
        <tr>
          <td><%= mining_type.description %></td>
          <td><%= mining_type.acronym %></td>          
          <td><%= link_to translated_navigation_links(:show), mining_type %></td>
          <td><%= link_to translated_navigation_links(:edit), edit_mining_type_path(mining_type) %></td>          
          <td><%= button_to translated_navigation_links(:delete), mining_type, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to translated_navigation_links(:new_mining_type), new_mining_type_path %>
