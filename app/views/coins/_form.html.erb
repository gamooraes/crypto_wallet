<%= form_with(model: coin, html: { class: "dark-form" }) do |form| %>
  <% if coin.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h2 class="h5 mb-2"><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>
      <ul class="mb-0 ps-3">
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description, class: "form-label text-light mb-2" %>
    <%= form.text_field :description, class: "form-control bg-dark text-light border-secondary" %>
  </div>

  <div class="mb-3">
    <%= form.label :acronym, class: "form-label text-light mb-2" %>
    <%= form.text_field :acronym, class: "form-control bg-dark text-light border-secondary" %>
  </div>

  <div class="mb-3">
    <%= form.label :url_image, class: "form-label text-light mb-2" %>
    <%= form.text_field :url_image, class: "form-control bg-dark text-light border-secondary", placeholder: "https://example.com/image.png" %>
  </div>

  <div class="mb-4">
    <%= form.label :mining_type_id, "Mining Type", class: "form-label text-light mb-2" %>
    <%= form.select :mining_type_id, @mining_type_options, { include_blank: "Selecione..." }, 
                    { class: "form-select bg-dark text-light border-secondary" } %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Cancelar", coins_path, class: "btn btn-danger px-4" %>
    <%= form.submit class: "btn btn-success px-4", data: { turbo: false } %>
  </div>
<% end %>